<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
   		android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_weight="1" >
   		<ImageView 
			android:id="@+id/photoFrame"
			android:src="@drawable/voegfototoeen"
			android:scaleType="fitCenter"
			android:layout_gravity="center"
			android:layout_height="fill_parent"
			android:layout_width="wrap_content" android:paddingTop="15px"/>
		</FrameLayout>
	
	

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_weight="0" 
		android:gravity="center_horizontal">
		<TextView android:id="@+id/timeRecording"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:gravity="center_horizontal" 
			android:layout_marginLeft="6dip"
			android:layout_marginTop="6dip" 
			android:layout_weight="1"
			android:text="@string/annotateCounterReset" 
			android:typeface="monospace"
			android:textAppearance="?android:attr/textAppearanceLarge" />


	</LinearLayout>
	
	<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
   		android:layout_width="fill_parent"
    	android:layout_height="wrap_content" android:layout_weight="0">
   		<ImageView 
			android:id="@+id/startRecording"
			android:src="@drawable/startaudioopname1en"
			android:scaleType="fitCenter"
			android:layout_gravity="center"
			
			android:layout_height="fill_parent"
			android:layout_width="wrap_content"
			android:maxWidth="200px"/>
	</FrameLayout>

	<LinearLayout android:orientation="horizontal"
		android:id="@+id/audioButtons" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_weight="0" android:gravity="top|center_horizontal">
		<ImageView android:id="@+id/recordButton" 
			android:src="@drawable/stop"
			android:layout_width="wrap_content" 
			android:layout_height="fill_parent"
			android:layout_weight="0" />
		<ImageView android:id="@+id/playButton" 
			android:src="@drawable/play"
			android:layout_width="wrap_content" 
			android:layout_height="fill_parent"
			android:layout_weight="0" />
	</LinearLayout>
	
	
	<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
   		android:layout_width="fill_parent"
    	android:layout_height="wrap_content" android:layout_weight="0">
   		<ImageView 
			android:id="@+id/publishAnnotation"
			android:src="@drawable/publiceeren"
			android:scaleType="fitCenter"
			android:layout_gravity="center"
			
			android:layout_height="fill_parent"
			android:layout_width="wrap_content"/>
	</FrameLayout>
</LinearLayout>
