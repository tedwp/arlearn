	<WebView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/webview" 
		android:paddingRight="12dip"
            android:paddingLeft="12dip"
            android:padding="10dip"
            android:text="hier str regels tekst."
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:maxWidth="250dip" />
             </ScrollView>
            
      <LinearLayout 		android:id="@+id/playButtons"
      	android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"  android:layout_weight="0">
		<ImageView android:id="@+id/fv_playButton" 
			android:src="@drawable/black_play"
			android:layout_width="wrap_content" 
			android:layout_height="fill_parent"
			android:layout_weight="0" />
		<ImageView android:id="@+id/fv_stopButton" 
		android:src="@drawable/grey_stop"
			android:layout_width="wrap_content" 
			android:layout_height="fill_parent"
			android:layout_weight="0" />
       </LinearLayout>
