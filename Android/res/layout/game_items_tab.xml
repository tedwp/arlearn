<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/listGeneralItemsTab"
        android:layout_width="fill_parent"
        android:layout_height="274dp"
        android:layout_weight="0.26"
        android:background="@android:color/transparent"
        android:cacheColorHint="#00000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonNewGeneralItemsTab"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="5"
            android:onClick="onButtonNewGeneralItemClick"
            android:text="@string/buttonNewGeneralItemText" />

        <Button
            android:id="@+id/buttonSearchGeneralItem"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="5"
            android:onClick="onButtonSearchGeneralItemClick"
            android:text="@string/buttonSearchGeneralItemText" />
    </LinearLayout>


</LinearLayout>