<LinearLayout android:id="@+id/ni_linearLayout"
	android:layout_width="fill_parent" android:layout_height="match_parent"
	android:layout_gravity="bottom" android:orientation="vertical"
	android:background="@android:color/white"
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<WebView  android:id="@+id/mct_webview"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
	
    <TableLayout 
        android:layout_width="fill_parent"
        android:id="@+id/multipleChoiceImageTable"
        android:layout_height="fill_parent"
        android:layout_weight=".90"
        android:stretchColumns="0"
            >
    </TableLayout>
    <Button android:id="@+id/mct_submit" 
		android:text="@string/mct_submit"
		android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:layout_weight="0" />
</LinearLayout>