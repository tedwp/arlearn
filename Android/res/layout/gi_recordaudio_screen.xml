<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"    
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/package_48x48" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/audio_icon" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Use buttons to start/stop recording"
            android:textColor="#000000" />
                
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editTextAOName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Write item name here">
            
            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editTextAODescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Description" >
        </EditText>

        <EditText
            android:id="@+id/editTextAORichText"
            android:layout_width="fill_parent"
            android:layout_height="100dip"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:gravity="top"
            android:hint="Rich text"
            android:inputType="text"
            android:lines="3"
            android:textColor="#000000" />

    </LinearLayout> 



        <ImageView
            android:id="@+id/imageStartAudioRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startRecordingAudio"
            android:src="@drawable/startaudioopname1en" />

        <ImageView
            android:id="@+id/imageStopAudioRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:onClick="stopRecordingAudio"
            android:src="@drawable/stopaudioopname1en" />

        <ImageView
            android:id="@+id/imagePublishAudioRecord"
            android:layout_width="197dp"
            android:layout_height="66dp"
            android:onClick="publishRecordingAudio"
            android:src="@drawable/publiceeren" />


</LinearLayout>