<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/ARLearn.Store.GameRowBig"
        >

    <ImageView
            android:id="@+id/icon"

            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="6dip"

            android:src="@drawable/icon" />

    <LinearLayout
            android:orientation="vertical"

            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/gameTitleId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:text="Record game" />
        <TextView
                android:id="@+id/gameCategoryId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10dp"
                android:gravity="center_vertical"
                android:text="Music" />

        <TextView
                android:id="@+id/gameDescriptionId"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10dp"
                android:singleLine="false"
                android:text="A location based game that takes you to the major recording studios in London"
                android:paddingBottom="3dp"
                />

        <TextView
                android:id="@+id/downloadId"
                style="@style/ARLearn.StoreGameRowBigDownload"


                android:layout_height="0dip"
                android:layout_weight="1"
                android:textSize="10dp"
                android:gravity="center_vertical"
                android:text="Download" />

    </LinearLayout>

</LinearLayout>
