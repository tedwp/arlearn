<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" >

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/head_list_phases" android:layout_width="match_parent" android:layout_height="match_parent" >
                <ImageView android:id="@+id/list_phases_image"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_margin="30dp"
                           android:maxHeight="60dp"
                           android:layout_centerVertical="true"
                           android:src="@drawable/ic_placeholder"/>

                <TextView android:id="@+id/list_phases_title"
                          android:textSize="20dp"
                          android:layout_width="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_toRightOf="@id/list_phases_image"
                          android:layout_height="wrap_content"/>
            </RelativeLayout>

            <LinearLayout android:id="@+id/list_phases" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" >

            </LinearLayout>

            <LinearLayout android:id="@+id/link_friends" android:layout_marginTop="@dimen/mainscreen_margintop_first" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" >

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>