<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView android:id="@+id/data_collection_tasks_title_list"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/data_collection_tasks"
              style="@style/CustomTheme.TextView.Title1"
            />
    <ListView android:id="@+id/data_collection_tasks"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:dividerHeight="1dp"
              android:layout_below="@id/data_collection_tasks_title_list"
              />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/text_default"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:textSize="40sp"
              android:padding="32dp"
            android:visibility="gone"/>

</RelativeLayout>
