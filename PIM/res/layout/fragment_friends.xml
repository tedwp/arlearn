<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_friends"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView android:id="@+id/friends_add_friend"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:dividerHeight="1dp" />

    <TextView android:id="@+id/friends_title_list"
              android:layout_below="@id/friends_add_friend"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/friends_title_list"
              style="@style/CustomTheme.TextView.Title1" />

    <ListView android:id="@+id/list_friends"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:dividerHeight="1dp"
              android:layout_below="@id/friends_title_list" />

</RelativeLayout>
