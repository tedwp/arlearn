<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" style="@style/main">

    <fragment android:name="net.wespot.pim.utils.layout.TempEntryFragment"
              android:id="@+id/inquiries_new_inquiry"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/inquiries_title_list"
              android:layout_below="@id/inquiries_new_inquiry"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              style="@style/title_fragments_in_inquiries"
              android:text="@string/inquiry_title_list"/>
    <ListView android:id="@+id/list_inquiries"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/inquiries_title_list"
              />

</RelativeLayout>
